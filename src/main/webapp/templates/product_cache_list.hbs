<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>书名</th>
        <th>价格</th>
        <th>分类</th>
        <th>剩余库存</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
    {{#each products}}
        <tr>
            <td><img class="border rounded overflow-hidden" width="80" height="80" src="{{thumbnail.url}}" alt="商品描述"></td>
            <td>{{name}}</td>
            <td>¥ {{price}}</td>
            <td>{{category.name}}</td>
            <td>{{storage.rest}}</td>
            <td>
                <button class="btn btn-success btn-cache-edit btn-sm" product-id="{{id}}">编辑</button>
                <button class="btn btn-danger btn-cache-remove btn-sm" product-id="{{id}}">移除</button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>